{
  "name": "engine-ui",
  "version": "0.0.1",
  "private": true,
  "license": "MIT",
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*",
    "templates/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "build:cli": "turbo --filter=engine-ui build",
    "build:registry": "pnpm --filter=www build:registry",
    "dev": "turbo run dev --parallel",
    "cli:dev": "turbo --filter=engine-ui dev",
    "cli:start": "pnpm --filter=engine-ui start:dev",
    "www:dev": "pnpm --filter=www dev",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "preview": "turbo run preview",
    "typecheck": "turbo run typecheck",
    "format:write": "turbo run format:write",
    "format:check": "turbo run format:check",
    "prepare": "husky install",
    "check": "turbo lint typecheck format:check",
    "release": "changeset version",
    "test": "turbo run test --force",
    "registry:build": "pnpm --filter=www registry:build"
  },
  "packageManager": "pnpm@9.15.0",
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.2",
    "@changesets/cli": "^2.29.8",
    "@commitlint/cli": "^20.2.0",
    "@commitlint/config-conventional": "^20.2.0",
    "@ianvs/prettier-plugin-sort-imports": "^4.7.0",
    "@types/node": "^25.0.3",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@typescript-eslint/parser": "^8.50.1",
    "autoprefixer": "^10.4.23",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "eslint": "^9.39.2",
    "eslint-config-next": "^15.1.6",
    "eslint-config-prettier": "^10.1.8",
    "eslint-config-turbo": "^2.7.1",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-tailwindcss": "^3.18.2",
    "husky": "^9.1.7",
    "postcss": "^8.5.6",
    "prettier": "^3.7.4",
    "pretty-quick": "^4.2.2",
    "tailwindcss": "^3.4.17",
    "tailwindcss-animate": "^1.0.7",
    "tree-sitter": "^0.21.1",
    "tsx": "^4.21.0",
    "turbo": "^2.7.1",
    "typescript": "^5.9.3",
    "vite-tsconfig-paths": "^6.0.3",
    "vitest": "^4.0.16"
  }
}
